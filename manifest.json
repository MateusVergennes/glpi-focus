{
    "name": "GLPI Focus Mode",
    "description": "Esconde menus e navbar do GLPI para ganhar espa√ßo.",
    "version": "1.2.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "toggle-focus": {
            "suggested_key": {
                "default": "Alt+Shift+Q"
            },
            "description": "Alternar modo focus no GLPI"
        }
    },
    "action": {
        "default_title": "GLPI Focus"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "style.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}